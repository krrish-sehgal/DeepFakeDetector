<%- include('../includes/head.ejs') %> <%- include('../includes/navigation.ejs')
%>

<div class="container-xxl text-center my-5">
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <img src="<%= imageUrl %>" class="card-img-top" alt="Uploaded Image" />
        <div class="card-body">
          <h5 class="card-title">Image uploaded</h5>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <h2 class="mb-4">RESULTS</h2>
      <% if (prediction > 50) { %>
      <h3 class="text-success">REAL</h3>
      <% } else { %>
      <h3 class="text-danger">FAKE</h3>
      <% } %>
      <h4 class="text-predict">Prediction: <%= prediction %> %</h4>
      <div class="progress my-3 position-relative">
        <div
          class="progress-bar"
          role="progressbar"
          style="width: 10px"
          aria-valuenow=" <%= prediction %>"
          aria-valuemin="0"
          aria-valuemax="100"
        >
          <span
            class="position-absolute w-100 text-center text-dark"
            style="z-index: 1"
            ><%= prediction %>%</span
          >
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('../includes/footer.ejs') %> <%- include('../includes/end.ejs') %>
